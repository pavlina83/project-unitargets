  <script>
    function contactUs() {
      let name = prompt("What is your name?");
      let age = prompt("How old are you?");

      let last = document.querySelector(".last");
      if (age >= 18) {
        last.innerHTML =
          "<strong>Thank you, " +
          name +
          "! Please contact us at unitargets@gmail.com!</strong>";
      } else {
        last.innerHTML =
          "<strong>Thank you, " +
          name +
          "! Unfortunately we cannot offer you our services!</strong>";
      }
    }

    let contactButton = document.querySelector("button");

    contactButton.addEventListener("click", contactUs);
  </script>
